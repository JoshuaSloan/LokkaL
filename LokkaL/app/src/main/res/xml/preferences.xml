<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Location Settings"
        android:key="pref_key_storage_settings">

        <ListPreference
            android:key="pref_update_speed"
            android:title="Location update interval."
            android:summary="Change the time between location updates."
            android:entries="@array/updateIntervalEntries"
            android:entryValues="@array/updateIntervalValues"
            android:defaultValue="2"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Privacy Settings"
        android:key="pref_key_storage_settings">

        <CheckBoxPreference
            android:key="pref_key_show_battery_life"
            android:summary="Display your battery life to group members."
            android:title="Battery display"
            android:defaultValue="true"/>


    </PreferenceCategory>



</PreferenceScreen>